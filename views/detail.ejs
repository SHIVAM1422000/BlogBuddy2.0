<!DOCTYPE html>
<html>
<head>
	<title>Blog</title>
	<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
	<link  rel="stylesheet" type="text/css" href="/stylesheet/edit.css">
	
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<!-- <style type="text/css"></style> -->
</head>
<body>
<!-- ******************************** HEader Ends************************************** -->
	                           
	                           <!-- Navbar  -->
	<!-- ================================================================ -->
	<div class="ui fixed inverted menu">
		<div class="ui container">
			<div class="header item">
				<i class="rss icon"></i>Blog Buddy		</div>
			<a class="item" href="/blogs">Explore</a>
			<% if(cu){ %>
		<a class="item" id="modifyBlog" href="#">Modify Post</a>
				<% }else{ %>
		<a class="item" id="modifyBlog" href="/login">Modify Post</a>		
					<% } %>
		

		<a class="item" href="/login">Login</a>
		<a class="item" href="/register">Sign Up</a>
		<a class="item" href="/logout">Logout</a>
		</div>
  
	</div>
	
	<!-- *********************** Navbar Ends***************************************** -->
                  
	
	
	                      <!-- Form  Display Part -->
	<!-- ================================================================== -->
	
	<div id="mainContainer" class="container">
		<%=cu%>

		<% if(cu){ %>
			
		<% }else{ %>
			
			<% } %>
		
		<div class="fparc">
			<h1 style="color: rgb(200, 22, 245); font-family: Arial, Helvetica, sans-serif;">
				<div class="tit">
					<%=blog.title%>	
				</div>
			</h1>
			
			<div class="pict">
					<image src="<%=blog.image%>"></image>
			</div>
			
			<div class="discp" style="color: rgb(238, 255, 0); font-family: Arial, Helvetica, sans-serif; size: 10px;">
				<%=blog.body%>	
			</div>
			
			<div class="uname" style="color: rgb(255, 0, 0);">
				Created by:-<%=blog.uname%>
			</div>
		</div>

		<% if(cu){ %> 
		<% if(cu._id.equals(blog.uid)){ %>
		<!-- //modify -->
		
		<div class="but">
			<a class="item btn btn-success" id="editBlog1" href="/blogs/<%=blog._id%>/edit">Edit Post</a>
		</div>
		
		<form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
			<button class="btn btn-danger" id="deleteBlog1">
				Delete Blog
			</button>
		</form>
		<!-- ********************* -->

				<% }else{ %>
					
		<!-- //modify -->
		
		<a class="item btn btn-success" id="editBlog1" href="/wrong">Edit Post</a>

		
		<form action="/wrong">
			<button class="btn btn-danger" id="deleteBlog1">
				Delete Blog
			</button>
		</form>
		<!-- ********************* -->

		<% } %>

		<% } %>

	</div>
	
<style>
	.hide{
		visibility: hidden;
	}
</style>


	<!-- *************************************************************************************** -->
	<script>

var modify=document.querySelector("#modifyBlog");
var btnEdit=document.querySelector("#editBlog1");
var btnDelete=document.querySelector("#deleteBlog1");
modify.addEventListener("click",function(){
	btnEdit.classList.toggle("hide");
	btnDelete.classList.toggle("hide");
})
	</script>


<!-- Footer PArt
=========================================== -->

	</body>
</html>







